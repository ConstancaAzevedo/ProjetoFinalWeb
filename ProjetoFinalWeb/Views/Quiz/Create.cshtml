@{
    ViewData["Title"] = "Criar Quiz";
}

<div class="container">
    <h2>Criando Quiz sobre: <span class="text-primary">@ViewBag.Category</span></h2>
    
    <!-- Seu formulário de criação de quiz aqui -->
    <form asp-action="Create">
        <div class="form-group">
            <label>Título do Quiz</label>
            <input type="text" class="form-control" name="Title" required>
        </div>
        
        <!-- Adicione mais campos conforme necessário -->
        
        <button type="submit" class="btn btn-primary mt-3">Criar Quiz</button>
    </form>
</div>